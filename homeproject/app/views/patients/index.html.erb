<h1>Listing all the Patients</h1>

<table>
  <tr>
    <th>|Name</th>
    <th>|Age</th>
    <th>|Address|</th>
  </tr>
  <% @patient.each do |patient| %>
  <tr>
    <td>|
      <%=patient.name%>
    |</td>
    <td>
      <%=patient.age%>
    |</td>
    <td>
      <%=patient.address%>
    </td>
    <td>|<%= link_to 'Show', patient_path(patient)%></td>
    <td>|<%= link_to 'Edit', edit_patient_path(patient)%></td>
    <td>|<%= link_to 'Delete', patient_path(patient),method: :Delete ,data: {confirm: "Are you sure you want to delete this record????"} %> |</td>
  </tr>
  <%end%>
</table>
<%= link_to "Create record", new_patient_path %>