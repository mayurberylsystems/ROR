<h1>Appointments <h1>

<%= form_for :appointment, url: doctors_appointments_path do |f| %>

<p>
<%= f.label :doctor_id %><br>
<%= f.text_field :doctor_id %>
</p>
<p>
<%= f.label :patient_id %><br>
<%= f.text_field :patient_id %>
</p>
<p>
<%= f.label :appoint_date %><br>
<%= f.text_field :appoint_date %>
</p>
<p>
<%= f.submit "Fix appointment"%>
</p>
<%end%>