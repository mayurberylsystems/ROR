<%= link_to "HOME" , root_path %>
<h1> Listing all the Patients </h1>

<table>
  <tr>
    <th> Name </th>
    <th> Age </th>
    <th> Address </th>
  </tr>
  <% @patient.each do |patient| %>
    <tr>
      <td>
        <%= patient.name %>
      </td>
      <td>
        <%= patient.age %>
      </td>
      <td>
        <%= patient.address %>
      </td>
    </tr>
  <% end %>
</table>
