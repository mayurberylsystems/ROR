<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
      <h4 class="modal-title"><%= @item.title %></h4>
    </div>
    <div class="modal-body">
      <%= form_tag brand_save_item_images_path(id: @item.id), multipart: true do %>
        <div class="pd-top30">
          <div class="text-center">
            <p>You can select here more than one image</p>
          </div>
          <div class="row">
            <div class="col-md-8">
              <%= text_field_tag :item_images_files_name, '', class: 'form-control', disabled: true %><br/>
            </div>
            <div class="col-md-3">
              <%= submit_tag 'Upload', class: "btn btn-block btn-primary" %>
            </div>
            <div class="col-md-8">
              <label class="styled-btn pull-right">
                Browse Item Images… <%= file_field_tag 'item_images[]', value: "upload", accept: 'image/*', style: "display: none;", required: true, multiple: true %>
              </label>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  $(function($) {
    $('#item_images_').change(function() {
      if($(this).val()){
        str = ''
        var files = $(this)[0].files;
        for (var i = 0; i < files.length; i++)
        {
          str += files[i].name
          if(i < files.length-1){
            str += ', '
          }
        }
        //var filename = $(this).val().split('\\').pop(-1);
        console.log(str);
        $('#item_images_files_name').val(str);
      }
    });
  });
</script>
