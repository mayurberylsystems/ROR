<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <div class="tell-identity password-form">
      <h3>Change your password</h3>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div class="form-group">
          <div class="input-box">
            <%= f.password_field :password, class: "form-control", placeholder: "New password", autofocus: true, autocomplete: "off" %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-box">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm new password", autofocus: true, autocomplete: "off" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "Change my password", class: "continue-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
