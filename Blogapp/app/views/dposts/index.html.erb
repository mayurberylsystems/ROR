<h1>Listing all the posts</h1><br>
<%= link_to 'home page', welcome_index_path %><br><br>
<table>
	<tr>
		<th>Name</th>
		<th>Title</th>
		<th>Content</th>
	</tr>
	<% @dpost.each do |dpost| %>
	<tr>
		<td>
			<%=dpost.name%>
		</td>
		<td>
			<%=dpost.title%>
		</td>
		<td>
			<%=dpost.content%>
		</td>
		<td><%= link_to 'Show', dpost_path(dpost)%></td>
		<td><%= link_to 'Edit', edit_dpost_path(dpost)%></td>
	</tr>
	<% end %>
</table>
<br>
<%= link_to 'add a new post', dposts_new_path %>
