<h1>Registration Form</h1>
<%= form_for :form, url: forms_path do |f| %>
<p>
	<%= f.label :name %><br>
	<%= f.text_field :name %><br>
	<%= f.label :address %><br>
	<%= f.text_field :address %><br>
	<%= f.label :email %><br>
	<%= f.text_field :email %><br>
</p>

<p>
<%= f.label :queries %><br><br>
<%= f.text_area :queries, "rows"=> 10 , "cols"=> 20%><br>

</p>


<p>
	<%= f.submit "submit"%>
</p>
<% end %>